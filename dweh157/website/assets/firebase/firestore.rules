rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read products
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // For now, no writes from client
    }

    // Allow anyone to read/write product subcollections (e.g., reviews)
    match /products/{productId}/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to read user documents (for seller info)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to manage their own cart and wishlist
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read app info
    match /app-INFO/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
